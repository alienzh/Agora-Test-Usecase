<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/tlStatistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC151325"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_up"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TableRow android:paddingVertical="3dp">

            <TextView
                android:id="@+id/tvEncodeResolution"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="@string/dashboard_encode_resolution" />

            <TextView
                android:id="@+id/tvStatisticEncodeFPS"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="@string/dashboard_encode_fps" />
        </TableRow>

        <TableRow android:paddingVertical="3dp">

            <TextView
                android:id="@+id/tvStatisticUpBitrate"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="@string/dashboard_up_bitrate" />

            <TextView
                android:id="@+id/tvStatisticUpLossPackage"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="@string/dashboard_up_loss_package" />
        </TableRow>

        <TableRow android:paddingVertical="3dp">

            <TextView
                android:id="@+id/tvStatisticUpNet"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="@string/dashboard_up_net_speech" />
        </TableRow>

        <TableRow android:paddingVertical="3dp">
            <TextView
                android:id="@+id/tvDeviceScore"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="@string/dashboard_device_score" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>